<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Registration</title>
    <style>
      body {
        background-color: #1a1a1a;
        color: #ffffff;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
      }

      .container {
        background-color: #2b2b2b;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        width: 400px;
        text-align: center;
      }

      h1 {
        color: #4caf50;
        margin-bottom: 20px;
      }

      label {
        display: block;
        margin-top: 20px;
        margin-bottom: 10px;
        color: #4caf50;
      }

      input {
        width: calc(100% - 20px);
        padding: 10px;
        box-sizing: border-box;
        background-color: #1a1a1a;
        border: 1px solid #4caf50;
        color: #ffffff;
        border-radius: 4px;
        outline: none;
      }

      input:focus {
        border-color: #ffffff;
      }

      button {
        width: 100%;
        padding: 12px;
        margin-top: 20px;
        background-color: #4caf50;
        color: #1a1a1a;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
      }

      button:hover {
        background-color: #45a049;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>New User Registration</h1>
      <form>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required />
        <small style="color: red;" id="nameError"></small>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required />
        <small style="color: red; " id="emailError"></small>

        <label for="phone">Phone Number:</label>
        <input type="tel" id="phone" name="phone" required />
        <small style="color: red" id="phoneError"></small>

        <button type="submit" id="submit">Submit</button>
      </form>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const button = document.getElementById("submit");
        button.addEventListener("click", () => {
          const name = document.getElementById("name").value;
          const email = document.getElementById("email").value;
          const phone = document.getElementById("phone").value;

          const nameValid = document.getElementById("nameError").value;
          const emailValid = document.getElementById("emailError").value;
          const phoneValid = document.getElementById("phoneError").value;

          nameValid = /^[a-zA-Z\s]{3,}$/.test(name);
          emailValid = /^[\w-.]+@[\w-]+\.+[\w-]{2,}$/.test(email);
          phoneValid = /^\d{10}$/.test(phone);

          if (!nameValid) {
            document.getElementById("nameError").innerHTML =
              "You have to enter a valid name";
          } else {
            document.getElementById("nameError").innerHTML = "";
          }
          if (!emailValid) {
            document.getElementById("emailError").innerHTML =
              "You have to enter a valid email";
          } else {
            document.getElementById("emailError").innerHTML = "";
          }
          if (!phoneValid) {
            document.getElementById("phoneError").innerHTML =
              "You have to enter a valid phone number";
          } else {
            document.getElementById("phoneError").innerHTML = "";
          }

          if (nameValid, emailValid, phoneValid) {
            
          }
        });
      });
    </script>
  </body>
</html>
